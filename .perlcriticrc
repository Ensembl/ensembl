[Subroutines::ProhibitUnusedPrivateSubroutines]
allow = _init_db _init_config _guess_config

[Subroutines::ProhibitUnusedPrivateSubroutines]
skip_when_using = Moose

[Subroutines::ProhibitManyArgs]
max_arguments = 7
